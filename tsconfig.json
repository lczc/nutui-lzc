{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "preserve",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      // 让ts识别的绝对路径
      "@/assets/*": [
        "src/assets/*"
      ],
      "@/models": [
        "src/models"
      ],
      "@/models/*": [
        "src/models/*"
      ],
      "@/stores": [
        "src/stores"
      ],
      "@/stores/*": [
        "src/stores/*"
      ],
      "@/service": [
        "src/service/"
      ],
      "@/service/*": [
        "src/service/*"
      ],
      "@/api/": [
        "src/service/api/"
      ],
      "@/api/*": [
        "src/service/api/*"
      ],
      "@/components": [
        "src/components/"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      "@/constants/*": [
        "src/constants/*"
      ],
      "@/pages/*": [
        "src/pages/*"
      ],
      "@/style/*": [
        "src/style/*"
      ],
      "@/utils": [
        "src/utils"
      ],
      "@/utils/*": [
        "src/utils/*"
      ],
      "@/hooks": [
        "src/hooks/"
      ],
      "@/router": [
        "src/router/"
      ],
      "@/router/*": [
        "src/router/*"
      ]
    }
  },
  "include": ["./src", "./types"],
  "compileOnSave": false
}
